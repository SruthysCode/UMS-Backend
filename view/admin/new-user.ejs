 
 <%- include('../layouts/header.ejs') -%>
 <div class="text-center p-5">
    <h1>User Registration </h1>
 </div>
 
<div class="text-center center-dash container-fluid" id="login">   
    <div class="container w-25 border ">          
            <div  style="padding:50px;">
                <form action="" method="post" >
                    <input type="text" name="name" id="name" placeholder="Name" required>
                    <br><br>
                    <input type="text" name="email" id="email" placeholder="Email" required>
                    <br><br>
                    <input type="text" name="mobile" id="mobile" placeholder="Mobile" required>
                    <br><br>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <br><br>
                    
                    <input type="submit" class="btn btn-success" value="Add User">
                </form>
                <%
                if(typeof message!=='undefined')
                {
                    %>
                    <p style="color: rgb(13, 0, 128)">
                        <%= message %>
            
                    </p>
                    <%
                }
                %>
                <div class="text-right">
                  <a href="/admin/dashboard">Go Back</a>
                </div>  
            </div>

        
    </div>
</div>
 
 <%- include('../layouts/footer.ejs') -%>
 
 